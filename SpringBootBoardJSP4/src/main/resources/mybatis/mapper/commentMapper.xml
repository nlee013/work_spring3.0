<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.boot.mapper.COMMENTSMapper">

	<select id="commentCount" resultType="int">
        SELECT
            COUNT(*)
        FROM COMMENTS
    </select>
    
    <select id="commentListService" resultType="com.spring.boot.dto.CommentDTO">
        SELECT
            *
        FROM COMMENTS
    </select>
    
    
    <insert id="commentInsertService" parameterType="com.spring.boot.dto.CommentDTO">
        INSERT INTO
        COMMENTS (CNO, BNO, CONTENT, WRITER, REG_DATE)
        VALUES(#{cno},#{bno},#{content},#{writer},sysdate) 
    </insert>
    
    <update id="commentUpdateService" parameterType="com.spring.boot.dto.CommentDTO">
        UPDATE COMMENTS
            SET
            CONTENT = #{content}
        WHERE CNO = #{cno}
    </update>
    
    <delete id="commentDeleteService" parameterType="int">
        DELETE FROM COMMENTS WHERE CNO = #{cno}
    </delete>



</mapper>